.div.col-md-6.col-md-offset-3
  .row
    .panel.panel-default
      .panel-heading
        %h2
          Edit #{resource_name.to_s.humanize}
      .panel-body
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          = f.error_notification
          .form_group
            = f.label :email           
            = f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' }, label: false
            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              %p
                Currently waiting confirmation for: #{resource.unconfirmed_email}
          .form_group
            = f.label :password          
            = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, input_html: { class: 'form-control' }, label: false
          .form_group
            = f.label :password_confirmation           
            = f.input :password_confirmation, required: false, input_html: { class: 'form-control' }, label: false
          .form_group
            = f.label :current_password            
            = f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: { class: 'form-control' }, label: false
          .form-actions
            = f.button :submit, "Update", class: "btn btn-info"

      .panel-footer
        %h3 Cancel my account
        %p
          Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger"}
        = link_to "Back", :back, class: "btn btn-default"
